{
  "name": "portfolio-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/host",
    "apps/projects"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:host\" \"npm run dev:projects\"",
    "dev:host": "npm run dev --workspace=apps/host",
    "dev:projects": "npm run dev --workspace=apps/projects",
    "build": "npm run build --workspaces",
    "build:host": "npm run build --workspace=apps/host",
    "build:projects": "npm run build --workspace=apps/projects",
    "preview": "concurrently \"npm run preview:host\" \"npm run preview:projects\"",
    "preview:host": "npm run preview --workspace=apps/host",
    "preview:projects": "npm run preview --workspace=apps/projects",
    "lint": "eslint \"apps/*/src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"apps/*/src/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"apps/*/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "npm run lint:fix && npm run format",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.4"
  }
}
